# ===============================================
# Web3 Balance Burner Configuration
# ===============================================

# NETWORK CONFIGURATION
# ===================
# Ethereum Mainnet
RPC_URL=https://mainnet.infura.io/v3/YOUR_INFURA_PROJECT_ID
WS_URL=wss://mainnet.infura.io/ws/v3/YOUR_INFURA_PROJECT_ID
CHAIN_ID=1

# Alternative RPC providers (uncomment to use)
# RPC_URL=https://eth-mainnet.alchemyapi.io/v2/YOUR_ALCHEMY_KEY
# RPC_URL=https://rpc.ankr.com/eth
# RPC_URL=https://ethereum.publicnode.com

# Polygon Network (uncomment for Polygon)
# RPC_URL=https://polygon-mainnet.infura.io/v3/YOUR_INFURA_PROJECT_ID
# WS_URL=wss://polygon-mainnet.infura.io/ws/v3/YOUR_INFURA_PROJECT_ID
# CHAIN_ID=137

# BSC Network (uncomment for Binance Smart Chain)
# RPC_URL=https://bsc-dataseed1.binance.org
# CHAIN_ID=56

# Arbitrum Network (uncomment for Arbitrum)
# RPC_URL=https://arb1.arbitrum.io/rpc
# CHAIN_ID=42161

# WALLET CONFIGURATION
# ===================
# WARNING: Never share your private key! Keep this file secure!
PRIVATE_KEY=your_private_key_here_without_0x_prefix

# Your secure wallet address to receive funds
TARGET_ADDRESS=0xYourSecureWalletAddressHere
# Alternative variable name
SECURE_WALLET_ADDRESS=0xYourSecureWalletAddressHere

# MONITORING CONFIGURATION
# =======================
# Use WebSocket for real-time monitoring (true/false)
USE_WEBSOCKET=true

# HTTP polling interval in milliseconds (used when WebSocket is disabled)
RECHECK_INTERVAL=3000

# Minimum balance threshold to trigger burn (in ETH)
BURN_THRESHOLD=0.001

# GAS OPTIMIZATION
# ===============
# Gas price multiplier for faster transactions (1.0 = normal, 2.0 = double)
GAS_MULTIPLIER=1.5

# Maximum gas price in Gwei (safety cap)
MAX_GAS_PRICE=300

# SECURITY SETTINGS
# ================
# Minimum balance to keep for gas costs (in ETH)
MINIMUM_BALANCE=0.001

# PERFORMANCE SETTINGS
# ===================
# Number of parallel transactions in batch operations
BATCH_SIZE=5

# Transaction confirmation timeout in milliseconds
CONFIRMATION_TIMEOUT=30000

# EMERGENCY SETTINGS
# =================
# Emergency mode gas multiplier (higher = faster)
EMERGENCY_GAS_MULTIPLIER=3.0

# Emergency mode maximum gas price in Gwei
EMERGENCY_MAX_GAS_PRICE=500

# LOGGING & MONITORING
# ===================
# Log level (error, warn, info, debug)
LOG_LEVEL=info

# Enable transaction logging to file (true/false)
ENABLE_TX_LOGGING=true

# Log file path
LOG_FILE_PATH=./balance_burner.log

# ADVANCED SETTINGS
# ================
# Custom gas limit for transactions (leave empty for auto-estimation)
CUSTOM_GAS_LIMIT=

# Custom nonce offset for transaction ordering
NONCE_OFFSET=0

# Enable mempool monitoring for incoming transactions (true/false)
ENABLE_MEMPOOL_MONITORING=false

# Slippage tolerance for gas estimation (in percentage)
GAS_SLIPPAGE_TOLERANCE=10

# NOTIFICATION SETTINGS (Optional)
# ==============================
# Discord webhook for notifications
DISCORD_WEBHOOK_URL=

# Telegram bot configuration
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# Email notifications (SMTP)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
NOTIFICATION_EMAIL=

# TESTNET CONFIGURATIONS (for testing)
# ==================================
# Goerli Testnet
# RPC_URL=https://goerli.infura.io/v3/YOUR_INFURA_PROJECT_ID
# WS_URL=wss://goerli.infura.io/ws/v3/YOUR_INFURA_PROJECT_ID
# CHAIN_ID=5

# Sepolia Testnet
# RPC_URL=https://sepolia.infura.io/v3/YOUR_INFURA_PROJECT_ID
# WS_URL=wss://sepolia.infura.io/ws/v3/YOUR_INFURA_PROJECT_ID
# CHAIN_ID=11155111

# Mumbai Testnet (Polygon)
# RPC_URL=https://polygon-mumbai.infura.io/v3/YOUR_INFURA_PROJECT_ID
# WS_URL=wss://polygon-mumbai.infura.io/ws/v3/YOUR_INFURA_PROJECT_ID
# CHAIN_ID=80001

# BACKUP CONFIGURATION
# ===================
# Backup RPC URLs in case primary fails
BACKUP_RPC_URL_1=https://rpc.ankr.com/eth
BACKUP_RPC_URL_2=https://ethereum.publicnode.com
BACKUP_RPC_URL_3=https://rpc.flashbots.net

# Multiple target addresses for different scenarios
BACKUP_TARGET_ADDRESS_1=0xYourBackupWallet1
BACKUP_TARGET_ADDRESS_2=0xYourBackupWallet2
BACKUP_TARGET_ADDRESS_3=0xYourColdWallet

# ===============================================
# SETUP INSTRUCTIONS:
# ===============================================
# 1. Copy this file to your project directory as '.env'
# 2. Replace placeholder values with your actual configuration
# 3. Get API keys from:
#    - Infura: https://infura.io/
#    - Alchemy: https://alchemy.com/
#    - Or use public RPC endpoints
# 4. Set your PRIVATE_KEY (without 0x prefix)
# 5. Set your TARGET_ADDRESS (with 0x prefix)
# 6. Choose your network by uncommenting the appropriate RPC_URL
# 7. Test on testnet first before using mainnet!
#
# SECURITY WARNINGS:
# - Never commit this file to version control
# - Add .env to your .gitignore file
# - Keep your private key secure and encrypted
# - Use a separate compromised wallet, not your main wallet
# - Test thoroughly on testnets before mainnet use
# ===============================================
